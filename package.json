{
  "name": "plexui-docs",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/ui"
  ],
  "scripts": {
    "dev": "next dev",
    "dev:restart": "lsof -ti:3000 | xargs kill -9 2>/dev/null; next dev",
    "build": "next build",
    "postinstall": "npm run build:ui",
    "build:ui": "npm run build --workspace=packages/ui",
    "start": "next start",
    "lint": "eslint",
    "lint:docs-code": "node scripts/check-doc-code-duplicates.mjs",
    "publish:ui": "npm run build:ui && npm publish --access public --workspace=packages/ui"
  },
  "dependencies": {
    "@plexui/ui": "*",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.6.1",
    "fumadocs-core": "^16.5.1",
    "fumadocs-mdx": "^14.2.6",
    "fumadocs-ui": "^16.5.1",
    "luxon": "^3.7.1",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/luxon": "^3.6.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "postcss-functions": "^4.0.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}

{
  "name": "@plexui/ui",
  "version": "0.3.0",
  "description": "Modern design system for building high-quality applications",
  "type": "module",
  "license": "MIT",
  "private": false,
  "sideEffects": [
    "*.css"
  ],
  "homepage": "https://plexui.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/plex-ui/docs.git",
    "directory": "packages/ui"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "design-system",
    "tailwind",
    "plexui",
    "radix",
    "chatgpt"
  ],
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist/es/**",
    "dist/types/**"
  ],
  "exports": {
    "./css": "./dist/es/styles/index.css",
    "./components/*": {
      "types": "./dist/types/components/*/index.d.ts",
      "default": "./dist/es/components/*/index.js"
    },
    "./hooks/*": {
      "types": "./dist/types/hooks/*.d.ts",
      "default": "./dist/es/hooks/*.js"
    },
    "./types": {
      "types": "./dist/types/types.d.ts",
      "default": "./dist/es/types.js"
    },
    "./theme": {
      "types": "./dist/types/lib/theme.d.ts",
      "default": "./dist/es/lib/theme.js"
    },
    "./helpers": {
      "types": "./dist/types/lib/helpers.d.ts",
      "default": "./dist/es/lib/helpers.js"
    },
    "./userAgent": {
      "types": "./dist/types/lib/userAgent.d.ts",
      "default": "./dist/es/lib/userAgent.js"
    },
    "./dateUtils": {
      "types": "./dist/types/lib/dateUtils.d.ts",
      "default": "./dist/es/lib/dateUtils.js"
    }
  },
  "scripts": {
    "build:clean": "rm -rf dist",
    "build:js": "tsc -p tsconfig.build.json",
    "build:css": "node ./scripts/build-css.mjs",
    "build:assets": "node -e \"const fs=require('fs'),p=require('path');function c(s,d){fs.readdirSync(s,{withFileTypes:true}).forEach(e=>{const sp=p.join(s,e.name),dp=p.join(d,e.name);if(e.isDirectory()){c(sp,dp)}else if(e.name.endsWith('.d.ts')){fs.mkdirSync(d,{recursive:true});fs.copyFileSync(sp,dp)}})}c('src','dist/types')\"",
    "build": "npm run build:clean && npm run build:js && npm run build:css && npm run build:assets",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.0.10"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "lodash": "4.17.21",
    "luxon": "3.7.1",
    "radix-ui": "^1.1.3",
    "react-markdown": "^9.0.3",
    "react-merge-refs": "^2.1.1",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-katex": "7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-directive": "^3.0.1",
    "remark-gfm": "^4.0.0",
    "remark-math": "6.0.0",
    "unist-util-visit": "^5.0.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.17",
    "@types/lodash": "4.17.16",
    "@types/luxon": "3.6.2",
    "@types/mdast": "^4.0.4",
    "@types/postcss-functions": "4.0.4",
    "@types/postcss-mixins": "9.0.6",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "10.4.20",
    "postcss": "^8",
    "postcss-functions": "^4.0.2",
    "postcss-mixins": "^11.0.3",
    "postcss-nested": "^7.0.2",
    "postcss-selector-parser": "7.1.0",
    "postcss-value-parser": "4.2.0",
    "tailwindcss": "4.0.10",
    "typescript": "5.7.3"
  }
}
